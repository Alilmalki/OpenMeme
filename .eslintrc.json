{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "ignorePatterns": ["**/*.md", "node_modules", ".*", "api/"],
    "rules": {
        "prettier/prettier": "warn",
        "react/jsx-filename-extension": "off",
        "react/prop-types": "off"
    }
}
